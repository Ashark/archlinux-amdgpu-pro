	extract_deb "${srcdir}"/amdgpu-pro-17.30-465504/./libgl1-amdgpu-pro-ext_17.30-465504_i386.deb
	extract_deb "${srcdir}"/amdgpu-pro-17.30-465504/./libgl1-amdgpu-pro-glx_17.30-465504_i386.deb
